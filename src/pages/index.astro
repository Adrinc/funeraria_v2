---
import LayoutBasic from '../layouts/LayoutBasic.astro';
import HeroSeccion from '../components/index/Secciones/HeroSeccion.astro';
import DireccionSeccion from '../components/index/Secciones/DireccionSeccion.astro';

import IntroSeccion from '../components/index/Secciones/IntroSeccion.jsx';
import Nosotros from '../components/index/Secciones/NosotrosSeccion.jsx';
import ContactoSeccion from '../components/index/Secciones/ContactoSeccion.jsx';

import OpcionesSeccion from '../components/index/Secciones/OpcionesSeccion.jsx';
import PlanesSeccion from '../components/index/Secciones/PlanesSeccion.jsx';
import Baner from '../components/react_components/baner/Baner.jsx';




---

<LayoutBasic title="Home" showFooter={true}>
	



	<HeroSeccion/>
	
	<IntroSeccion client:only="react" transition:persist/>

	<Baner 
	idSeccion='opciones'
	imagen='./image/bgs/003.jpg'
	titleEs='OPCIONES FUNERARIAS'
	subtitleEs='Las propiedades incluyen: Precio Congelado, Perpetuidad, Seguro de Saldos Insolutos, Transferible.'
	titleEn='FUNERAL OPTIONS'
	subtitleEn='The properties include: Frozen Price, Perpetuity, Insolvent Balance Insurance, Transferable.'
	client:only="react" transition:persist
  	/>

	<OpcionesSeccion client:only="react" transition:persist/>

	<Baner 
	imagen='./image/bgs/familia.webp' 
	titleEs='Estamos aquí para brindarte apoyo y ofrecerte soluciones' 
	subtitleEs='Amor, respeto y serenidad para honrar la vida de tus seres queridos'
	titleEn='We are here to support you and offer solutions' 
	subtitleEn='Love, respect, and serenity to honor the lives of your loved ones'
	client:only="react" transition:persist
  	/>
	
	<Nosotros client:only="react" transition:persist/>

	<Baner idSeccion='direccion' 
	imagen='./image/bgs/mapbg.jpg' 
	titleEs='Nuestras ubicaciones' 
	subtitleEs='Encuentra nuestras instalaciones y cementerio con facilidad' 
	titleEn='Our locations' 
	subtitleEn='Easily find our facilities and cemetery'
	height='250px'
	client:only="react" transition:persist
	/>
	
	<DireccionSeccion/>

	<PlanesSeccion client:only="react" transition:persist/>

	<Baner idSeccion='contacto' 
	imagen='./image/bgs/001.jpg' 
	titleEs='Contáctenos' 
	subtitleEs='Deje sus datos y con gusto le asesoramos' 
	titleEn='Contact us' 
	subtitleEn='Leave your details and we will gladly assist you'
	height='250px'
	client:only="react" transition:persist
  	/>
	<ContactoSeccion client:only="react" transition:persist />


</LayoutBasic>
