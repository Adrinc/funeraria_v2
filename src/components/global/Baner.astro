---
interface Props {
    imagen?: string;
    title?: string;
    subtitle?: string;
    height?: string;
    idSeccion?: string;
}

const { imagen, title, subtitle, height = "400px", idSeccion } = Astro.props;
---

<div id={idSeccion || ''} class="banner-container" style={`background-image: url(${imagen || 'default-image.jpg'}); --height: ${height};`}>
  <div class="overlay"></div>
  <div class="content">
    <h1 class="title"> {title || 'Título principal'} </h1>
    <p class="subtitle">{subtitle || ''} </p>
  </div>
</div>

<style>
  .banner-container {
    height: var(--height);
    width: 100vw;
    background-position: center;
    background-size: cover;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    overflow: hidden;
  }

 
  @media (min-width: 1024px) {
    .banner-container {
      background-attachment: fixed;
    }
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 0;
  }

  .content {
    text-align: center;
    color: white;
    z-index: 1;
    padding: 5vw;
    width: 100%;
  }

  .title {
    font-size: clamp(1.8rem, 4vw, 3rem);
    margin: 0;
    font-weight: bold;
  }

  .subtitle {
    font-size: clamp(1.2rem, 3vw, 2rem);
    margin: 10px 0 0;
    font-weight: lighter;
    color: #ffe4a4;
    background-color: rgba(0, 0, 0, 0.463);
    padding: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(10px);
  }

  /* Ajustes para pantallas más pequeñas */
  @media (max-width: 768px) {
    .banner-container {
      height: auto;
      padding: 20px 0;
    }
    .content {
      padding: 10vw;
    }
  }
</style>
