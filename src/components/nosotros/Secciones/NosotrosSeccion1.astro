---

import RiveComponent from "../../global/animations/riveComponent";

---

<section id="about" >
  <div class="rivecomp web">
    <RiveComponent
      src="/rive/cbluna-nosotros.riv"
      artboard="nosotros_seccion1"
      stateMachines="State Machine 1"
      autoplay={true}
      fit="fill"
      client:only="react"
      transition:persist
    />
  </div>

  <!-- aÃ±ade un video -->

  <video id="background-video" loop autoplay muted playsinline >
    <source src="/videos/cbluna.mp4" type="video/mp4" />
  </video>

</section>


<style>

section {
position: relative;
display: flex;
flex-direction: column;
justify-content: center;
align-items: center;
width: 100vw;
height: 95vh;
margin-top: 70px;
background-color: black;

}
video {
position: absolute;
top: 0;
left: 0;
width: 100%;
height: 100%;
object-fit: fill;
z-index: 1;
opacity: 0.6;
}



.rivecomp {
position: absolute;
display: flex;
flex-direction: column;
justify-content: center;
align-items: center;
width: 100%;
height: 100%;

z-index: 2;
}



.riveContainerMainCircle {
position: absolute;
display: flex;
top: -30%;
flex-direction: row;
justify-content: space-evenly;
align-items: center;
width: 100vw;
height: 750px;
z-index: 30;


}


.riveCircle {

display: flex;

flex-direction: column;
justify-content: center;
align-items: center;
width: 750px;
height: 100%;
z-index: 10;

}

.web {
display: block;
}

.movil {
display: none;
}

@media (max-width: 768px) {
.section {
  cursor: default;
}
.web {
  display: none;
}
.movil {
  display: block;
}
}

</style>

